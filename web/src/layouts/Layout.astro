---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Master cybersecurity with free, dockerized CTF challenges. Practice SQL Injection, XSS, RCE, and real-world CVEs (Log4Shell, Jenkins, TeamCity). Perfect for OSCP prep and Bug Bounty training." />
    <meta name="keywords" content="CTF, Cybersecurity, Docker, Hacking Labs, OSCP, Bug Bounty, CVE-2024, SQL Injection, XSS, Writeups, CyberPatriot, Cybersecurity Lessons, Cyber Ed, White Hat, Ethical Hacking, Burp Suite, Wireshark, Metasploit, SQLMap, CTF Writeups 2025, Cybersecurity CTF Training, Ethical Hacking Labs, Bug Bounty Practice, OSCP Preparation, OSCP Exam Prep, Penetration Testing Course, How to start playing CTF, Best CTF for beginners 2025, Dockerized CTF challenges, Free Hacking Labs, Web Exploitation Walkthroughs, CyberPatriot Training Materials, CyberPatriot Practice Images" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | CyberLessons101</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;600&family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col bg-[url('/grid.svg')] bg-fixed bg-center">
    <!-- Navbar -->
    <nav class="border-b border-white/10 bg-cyber-darker/80 backdrop-blur-md sticky top-0 z-50">
      <div class="w-full px-4 sm:px-6 lg:px-8 h-16 flex items-center">
        <div class="flex items-center gap-2 flex-shrink-0">
          <a href="/" class="text-2xl font-bold text-cyber-primary hover:opacity-80 transition-opacity inline-block">
            CyberLessons<span class="text-white">101</span>
          </a>
        </div>
        <div class="ml-auto flex gap-6 text-sm font-medium items-center">
          <!-- About Link -->
          <a href="/about" class="hover:text-cyber-primary transition-colors">About this Site</a>
          
          <!-- Dropdown for Challenges -->
          <div class="relative group">
            <button class="flex items-center gap-1 hover:text-cyber-primary transition-colors focus:outline-none py-4">
              Challenges
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <!-- Dropdown Menu -->
            <div class="absolute left-0 mt-0 w-48 bg-cyber-darker border border-white/10 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left z-50">
              <div class="py-1">
                <a href="/" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">All Challenges</a>
                <a href="/easy-challenges" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">Easy Challenges</a>
                <a href="/vm-challenges" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors border-t border-white/10 mt-1 pt-2">Full CTFd Challenge VMs</a>
                <a href="/black-box-challenges" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors text-red-400 font-semibold">Black Box Challenges</a>
              </div>
            </div>
          </div>

          <!-- Dropdown for Setup Docker -->
          <div class="relative group">
            <button class="flex items-center gap-1 hover:text-cyber-primary transition-colors focus:outline-none py-4">
              Setup Docker
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
            <!-- Dropdown Menu -->
            <div class="absolute left-0 mt-0 w-96 bg-cyber-darker border border-white/10 rounded-md shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform origin-top-left z-50">
              <div class="py-1">
                <a href="/docker" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">Setup Instructions</a>
                <a href="https://humble-raptor-f30.notion.site/Introduction-To-Docker-37ce34be5ef8459c9e2dbf843e5b5e37?source=copy_link" target="_blank" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">Docker Basic Training</a>
                <a href="https://humble-raptor-f30.notion.site/Managing-a-Home-Lab-with-Portainer-PiHole-and-Nginx-Proxy-Part-1-2df4c8e5237680b396f0f8b46d85ec7d?source=copy_link" target="_blank" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">Managing a Home Lab with Portainer Part I</a>
                <a href="https://humble-raptor-f30.notion.site/Managing-a-Home-Lab-with-Portainer-PiHole-and-Nginx-Proxy-Part-2-VPN-Container-Connection-with--1214c8e52376802885adf29fb036ec63?source=copy_link" target="_blank" class="block px-4 py-2 hover:bg-cyber-surface hover:text-cyber-primary transition-colors">Managing a Home Lab with Portainer Part II (VPN Connection)</a>
              </div>
            </div>
          </div>
          <a href="/run-website" class="hover:text-cyber-primary transition-colors">Host this Website</a>
          <a href="/host" class="hover:text-cyber-primary transition-colors">Host a Scoreboard</a>
          <a href="https://medium.com/@josh.beck2006" target="_blank" class="hover:text-cyber-primary transition-colors">My Medium</a>
          <a href="https://www.linkedin.com/in/joshbecketa/" target="_blank" class="hover:text-cyber-primary transition-colors">My Linkedin</a>
          <!-- <a href="https://github.com/joshbeck2024" target="_blank" class="hover:text-cyber-primary transition-colors">GitHub</a> -->
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-white/5 bg-cyber-darker py-8 mt-auto">
      <div class="text-center text-slate-500 text-sm">
        <p>&copy; {new Date().getFullYear()} CyberLessons101. Built for educational purposes.</p>
      </div>
    </footer>
  </body>
</html>

<style>
  /* Optional: Add a subtle grid background */
  body::before {
    content: "";
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    pointer-events: none;
    background-image: linear-gradient(rgba(15, 23, 42, 0.8) 1px, transparent 1px),
    linear-gradient(90deg, rgba(15, 23, 42, 0.8) 1px, transparent 1px);
    background-size: 50px 50px;
    z-index: -1;
    opacity: 0.2;
  }
</style>
